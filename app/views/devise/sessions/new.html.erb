<%= provide(:title, "Login" ) %>

<div class="outer-form">

	<h2>login</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

		<% if flash.any? %>
			<div class="flash-messages-devise right">
				<%= render 'shared/flash_messages' %>
			</div>
		<% end %>

		<div class="field">
			<%= f.email_field :email, autofocus: true , placeholder: 'Enter Email' ,class: "input" %>
		</div>

		<div class="field">
			<%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password' ,class: "input"  %>
		</div>

		<div class="actions">

			<%= f.submit "Log in", class: "button" %>
		</div>

		<%= render "devise/shared/links" %>


	<% end %>

</div>