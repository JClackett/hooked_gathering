<%= provide(:title, "Confirmation" ) %>

<div class="outer-form">

	<h2>resend confirmation instructions</h2>

	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
		<%= render 'shared/error_list', model: resource %>	

		<div class="field">
			<%= f.email_field :email, autofocus: true, placeholder: 'Email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %> 
		</div>

		<div class="actions">
			<%= f.submit "Resend confirmation instructions", class: 'button' %>
		</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>